@model KSociety.Example.Srv.Dto.Model.Book
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Areas/Book/Views/Shared/_BookLayout.cshtml";
}
<br />
<h2 class="text-info">@(Model.BookDto.Id != Guid.Empty ? "Edit" : "Create") Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.BookDto.Id != Guid.Empty)
        {
            <input type="hidden" asp-for="BookDto.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BookDto.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="BookDto.Title" class="form-control" />
            </div>
            <span asp-validation-for="BookDto.Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BookDto.AuthorName"></label>
            </div>
            <div class="col-6">
                <input asp-for="BookDto.AuthorName" class="form-control" />
            </div>
            <span asp-validation-for="BookDto.AuthorName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.BookDto.Id != Guid.Empty ? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}